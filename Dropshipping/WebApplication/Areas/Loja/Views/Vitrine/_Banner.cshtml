@model WebApplication.Areas.Loja.Models.ProdutoViewModel
<!--================Home Banner Area =================-->
<section class="home_banner_area">
	<div class="banner_inner d-flex align-items-center">
		<div class="container">
			<div class="banner_content row">
				<div class="col-lg-5">
					<h3>@Model.Nome</h3>
					<p>@Model.Descricao.</p>
					<a class="white_bg_btn" href="@Url.Action("detalhe", "produtos", new { area = "loja", id = Model.Codigo})">Veja mais</a>
				</div>
				<div class="col-lg-7">
					<div class="halemet_img">
						<img src="@Url.Content(Model.UrlImagem)" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--================End Home Banner Area =================-->