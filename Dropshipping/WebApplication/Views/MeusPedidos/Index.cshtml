@model List<Loja.Models.Pedido.PedidoViewModel>
<!--================Home Banner Area =================-->
<section class="banner_area">
	<div class="banner_inner d-flex align-items-center">
		<div class="container">
			<div class="banner_content text-center">
				<h2>Meus pedidos</h2>
				<div class="page_link">
					@Html.ActionLink("Home", "Index", new { controller = "Vitrine" })
					<a href="#">Pedidos</a>
				</div>
			</div>
		</div>
	</div>
</section>
<!--================End Home Banner Area =================-->
<!--================Category Product Area =================-->
<section class="cat_product_area p_30">
	<div class="container">
		<div class="row flex-row-reverse">
			<div class="col-lg-12">
			
				@if (Model == null || !Model.Any())
				{
					<label>Você ainda não possui nenhum pedido...</label>
				}
				else
				{
					<div class="section-top-border">
						<div class="progress-table-wrap">
							<div class="progress-table">
								<div class="table-head">
									<div class="serial">#</div>
									<div class="country">ID</div>
									<div class="visit">Data do pedido</div>
									<div class="percentage">Total</div>
								</div>
								
								@for (var i = 1; i <= Model.Count(); i++)
								{
									<div class="table-row">
										@{ var item = Model[i-1];}
										<div class="serial">@i</div>
										<div class="country"><a href="@Url.Action("Detalhes", "Pedido", new {pedido = item.Codigo })">@item.Codigo</a></div>
										<div class="visit">@item.Data</div>
										<div class="percentage">@item.TotalExibicao</div>
									</div>
								}
							</div>
						</div>
					</div>
				}

			</div>
		</div>
	</div>
</section>
<!--================End Category Product Area =================-->
