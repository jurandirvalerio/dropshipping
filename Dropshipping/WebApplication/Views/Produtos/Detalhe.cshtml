@model Loja.Models.Produtos.ProdutoViewModel
@{
	ViewBag.Title = "Detalhe";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
	<div class="banner_inner d-flex align-items-center">
		<div class="container">
			<div class="banner_content text-center">
				<h2>@Model.Nome</h2>
				<div class="page_link">
					@Html.ActionLink("Home", "Index", new { controller = "Vitrine" })
					@Html.ActionLink("Produtos", "Index")
					<a href="#">Detalhes do produto</a>
				</div>
			</div>
		</div>
	</div>
</section>
<!--================End Home Banner Area =================-->
<div class="product_image_area">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-6">
				<div class="s_product_img">
					<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							@for (int i = 0; i < Model.UrlImagemSet.Count; i++)
							{
								var imagem = Model.UrlImagemSet[i];
								var classe = i == 0 ? "active" : "";
								<li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@classe">
									<img class="thumbcarrossel" src="@imagem" alt="">
								</li>
							}
						</ol>
						<div class="carousel-inner">
							@for (var i = 0; i < Model.UrlImagemSet.Count; i++)
							{
								var imagem = Model.UrlImagemSet[i];
								var classe = i == 0 ? "active" : "";
								<div class="carousel-item @classe">
									<img class="d-block w-100" src="@imagem" alt="Third slide">
								</div>
							}
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>@Model.Nome</h3>
					<h2>@Model.ValorExibicao</h2>
					<ul class="list">
						<li><a href="#"><span>Disponível</span> em estoque</a></li>
					</ul>
					<p>@Model.Descricao</p>
					<div class="card_area pull-right">
						<a class="main_btn excecao addCarrinho" data-codigo="@Model.Codigo">Adicionar ao carrinho</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!--================End Single Product Area =================-->